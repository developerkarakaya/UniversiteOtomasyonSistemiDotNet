
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/UniOtomasyon/css/Cumhuriyet___niversitesi-logo-700A4B39AA-seeklogo.com.png">
    <title>SCÜ Üniversite Otomasyon Sistemi && Giriş</title>
    <link href="~/Content/UniOtomasyon/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/UniOtomasyon/plugins/bower_components/bootstrap-extension/css/bootstrap-extension.css" rel="stylesheet">
    <link href="~/Content/UniOtomasyon/css/animate.css" rel="stylesheet">
    <link href="~/Content/UniOtomasyon/css/style.css" rel="stylesheet">
    <link href="~/Content/UniOtomasyon/css/colors/blue.css" id="theme" rel="stylesheet">
    <script src="~/Content/UniOtomasyon/plugins/bower_components/jquery/dist/jquery.min.js"></script>

</head>

<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <section id="wrapper" class="login-register" style="background: url(/Content/UniOtomasyon/plugins/images/login-register.jpg) center center/cover no-repeat !important; height: 100%; position: fixed">
        <div class="login-box">
            <div class="white-box">
                <form class="form-horizontal form-material" id="loginform" action="@Url.Action("Login","Account")" method="post">
                    <input type="hidden" value="" name="ROLID" id="rol" />
                    <h3 class="box-title m-b-20">ÜNİVERSİTE OTOMASYON SİSTEMİ GİRİŞ</h3>
                    <div id="loginForm">
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" type="text" required="" name="USERNAME" id="USERNAME" placeholder="Kullanıcı Adı">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <input class="form-control" type="password" name="PASSWORDUSER" id="PASSWORDUSER" required="" placeholder="Şifre">
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" onclick="LoginForm('1')" id="ogrenci">Öğrenci Girişi</button>
                            <button type="submit" class="btn btn-success btn-lg btn-block text-uppercase waves-effect waves-light" onclick="LoginForm('2')" id="akedemisyen">Akedemisyen Girişi</button>
                            <button type="submit" class="btn btn-warning btn-lg btn-block text-uppercase waves-effect waves-light" onclick="LoginForm('4')" id="yonetici">Yönetici Girişi</button>
                        </div>
                    </div>
                    @if (ViewBag.success == 2)
                    {
                        <div class="form-group text-center m-t-20" id="alert"> 
                            <div class="col-xs-12">
                                <label class="label label-danger">Kullanıcı Adı Veya Şifre Hatalı.. Lütfen Tekrar Deneyiniz</label>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
                            <div class="social">
                                <a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip" title="Login with Facebook"> <i aria-hidden="true" class="fa fa-facebook"></i> </a>
                                <a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip" title="Login with Google"> <i aria-hidden="true" class="fa fa-google-plus"></i> </a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Üniversite Otomasyon Sistemi @DateTime.Now.Year
                        </div>
                    </div>
                </form>
                <a  id="secim" class="btn btn-warning btn-sm" onclick="LoginForm('3')" style="margin:auto; position:relative" >Kullanıcı Seçimine Dön</a>
            </div>
        </div>
    </section>
    <script>
        $(document).ready(function () {
            $('#loginForm').hide();
            $('#secim').hide();
            setTimeout(function () {
                $('#alert').hide();
            }, 3000);
        });
        function LoginForm(buttonId) {
            $('#loginForm').show();
            $('#secim').show();
            if (buttonId == 1) {
                $('#akedemisyen').hide();
                $('#yonetici').hide();

                $('#rol').val("1");
            }
            else if (buttonId == 2) {
                $('#ogrenci').hide();
                $('#yonetici').hide();
                $('#rol').val("2");
            }
            else if (buttonId == 3) {
                $('#loginForm').hide();
                $('#secim').hide();
                $('#akedemisyen').show();
                $('#ogrenci').show();
                $('#yonetici').show();

            }
            else if (buttonId == 4) {
                $('#ogrenci').hide();
                $('#akedemisyen').hide();
                $('#rol').val("3");
            }
        }

    </script>
    <script src="~/Content/UniOtomasyon/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/UniOtomasyon/bootstrap/dist/js/tether.min.js"></script>
    <script src="~/Content/UniOtomasyon/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/UniOtomasyon/plugins/bower_components/bootstrap-extension/js/bootstrap-extension.min.js"></script>
    <script src="~/Content/UniOtomasyon/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>
    <script src="~/Content/UniOtomasyon/js/jquery.slimscroll.js"></script>
    <script src="~/Content/UniOtomasyon/js/waves.js"></script>
    <script src="~/Content/UniOtomasyon/js/custom.min.js"></script>
    <script src="~/Content/UniOtomasyon/plugins/bower_components/styleswitcher/jQuery.style.switcher.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="~/Content/UniOtomasyon/plugins/bower_components/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        jQuery('.mydatepicker').datepicker();
    </script>
    <script src="~/Content/UniOtomasyon/js/jasny-bootstrap.js"></script>
    <script src="~/Content/UniOtomasyon/js/mask.js"></script>
</body>

</html>
